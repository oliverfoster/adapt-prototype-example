{
	"$ref": "schemas/text.json",
	"title": "Narrative",
	"id": "narrative",
	"properties": {
		"_hasNavigationInTextArea": {
			"type": "boolean"
		},
		"mobileInstruction": {
			"type": "string"
		},
		"_setCompletionOn": {
			"type": "string",
			"enum": [
				"allItems",
				"inview"
			]
		},
		"_items": {
		    "type": "array",
			"format": "tabs",
			"title": "_items",
			"options": {
				"collapsed": true
			},
			"uniqueItems": false,
			"items": {
				"type": "object",
				"headerTemplate": "{{ i0 }}",
				"properties": {
					"title": {
						"type": "string"
					},
					"body": {
						"type": "string"
					},
					"strapline": {
						"type": "string"
					},
					"_graphic": {
						"type": "object",
						"options": {
							"collapsed": true
						},
						"name": "_graphic",
						"properties": {
							"src": {
								"type": "string"
							},
							"alt": {
								"type": "string"
							},
							"title": {
								"type": "string"
							}
						}
					}
				}
			}
		}
  	}
}